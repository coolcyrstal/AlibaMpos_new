<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoneyValue"
    android:id="@+id/moneypay"
    android:background="#ffffff">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/bg_app"
        android:src="@drawable/bg_app"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/logo"
        android:layout_gravity="top"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo_psb"
        android:scaleType="fitXY"
        android:padding="1dp"
        android:background="#AAAAAA"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTHB"
        android:hint = "THB"
        android:editable="false"
        android:focusable="true"
        android:layout_below="@+id/textView"
        android:textColor="#AAAAAA"
        android:textSize="35dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="left"
        android:layout_marginLeft="180dp"/>

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="80dp"
        android:layout_marginRight="110dp"
        android:background="@drawable/button_money_border">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textmoney"
            android:hint = "0"
            android:editable="false"
            android:focusable="true"
            android:textColorHighlight="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:layout_marginBottom = "0dp"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:layout_marginRight="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textdot"
            android:hint = "."
            android:editable="false"
            android:focusable="true"
            android:textColorHighlight="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center|right"
            android:gravity="center_vertical|right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="42dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textmoneydot"
            android:hint = "00"
            android:editable="false"
            android:focusable="true"
            android:textColorHighlight="@android:color/holo_blue_bright"
            android:textColorHint="@android:color/holo_blue_bright"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity = "center_vertical|right"
            android:gravity="center_vertical|right"
            android:background="@android:color/transparent" />



    </RelativeLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id = "@+id/del"
        android:background="@drawable/icon_del"
        android:layout_marginRight="50dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="right|top" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:id="@+id/description"
        android:hint = " Enter Sale Description Optional"
        android:focusable="true"
        android:layout_below="@+id/textView"
        android:textSize="35dp"
        android:layout_marginTop="170dp"
        android:layout_gravity="center|top"
        android:background="@drawable/button_money_border"/>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/one"
                android:text="1"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/two"
                android:text="2"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/three"
                android:text="3"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/four"
                android:text="4"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/five"
                android:text="5"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/six"
                android:text="6"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/seven"
                android:text="7"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/eight"
                android:text="8"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/nine"
                android:text="9"
                android:textSize="50dp"
                android:layout_weight="2"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/zerozero"
                android:text="00"
                android:layout_weight="2"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/zero"
                android:layout_weight="2"
                android:text="0"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id = "@+id/ac"
                android:layout_weight="2"
                android:text="ac"
                android:textSize="50dp"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border"
                android:layout_margin="5dp" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/scancodepage"
        android:layout_gravity="center">

        <Button
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:id = "@+id/pay"
            android:text="pay"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="100dp"
            android:background="@drawable/btn_start"/>

    </FrameLayout>
</FrameLayout>
