        <!--android:adjustViewBounds="true"-->
        <!--android:id="@+id/bg_app"-->
        <!--android:src="@drawable/bg_app"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:layout_below = "@id/signin_button"/>-->

</FrameLayout>
