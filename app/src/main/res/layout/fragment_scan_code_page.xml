<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chayenjr.alibampos.ScanCodePage"
    android:id="@+id/scancodepage"
    android:background="#ffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/bg_app"
        android:src="@drawable/bg_app"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center|top"
        android:src="@drawable/iconscan"
        android:scaleType="fitXY"
        android:layout_marginTop="100dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/sendrecipepage"
        android:layout_gravity="center">

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id = "@+id/goscanbarcode"
            android:text="Scan BarCode"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="150dp"
            android:background="@drawable/btn_start"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id = "@+id/goscanqrcode"
            android:text="Scan QRCode"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_start"/>

    </FrameLayout>



</FrameLayout>
