<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chayenjr.alibampos.ScanCodePage"
    android:id="@+id/scancodepage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:src="@drawable/testscan"
        android:scaleType="fitXY" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/sendrecipepage"
        android:layout_gravity="center">

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id = "@+id/goscanbarcode"
            android:text="Scan BarCode"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="150dp"
            android:background="@android:color/holo_blue_bright"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id = "@+id/goscanqrcode"
            android:text="Scan QRCode"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50dp"
            android:background="@android:color/holo_blue_bright"/>

    </FrameLayout>



</FrameLayout>
