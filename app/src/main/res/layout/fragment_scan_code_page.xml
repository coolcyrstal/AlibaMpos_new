<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chayenjr.alibampos.ScanCodePage"
    android:id="@+id/scancodepage"
    android:background="#ffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:id="@+id/bg_app"
        android:src="@drawable/bg_app"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center|top"
        android:src="@drawable/iconscan"
        android:scaleType="fitXY"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scan your barcode or QR code for pay"
        android:textSize="15dp"
        android:id="@+id/textscan"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/sendrecipepage"
        android:layout_gravity="center">

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id = "@+id/goscanbarcode"
            android:text="Scan BarCode"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="160dp"
            android:background="@drawable/btn_start"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id = "@+id/goscanqrcode"
            android:text="Scan QR Code"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="100dp"
            android:background="@drawable/btn_start"/>

    </FrameLayout>



</FrameLayout>
