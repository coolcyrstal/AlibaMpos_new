<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoneyValue"
    android:id="@+id/moneypay"
    android:background="#ffffff">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/logo"
        android:layout_gravity="top"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_psb"
        android:scaleType="fitXY" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTHB"
        android:hint = "THB"
        android:editable="false"
        android:focusable="true"
        android:layout_below="@+id/textView"
        android:textColor="#AAAAAA"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="left"
        android:layout_marginLeft="100dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textmoney"
        android:hint = "0"
        android:editable="false"
        android:focusable="true"
        android:layout_below="@+id/textView"
        android:textColorHighlight="@android:color/holo_blue_bright"
        android:textColorHint="@android:color/holo_blue_bright"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="150dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textdot"
        android:hint = "."
        android:editable="false"
        android:focusable="true"
        android:layout_below="@+id/textView"
        android:textColorHighlight="@android:color/holo_blue_bright"
        android:textColorHint="@android:color/holo_blue_bright"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_gravity="right"
        android:layout_marginRight="145dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textmoneydot"
        android:hint = "00"
        android:editable="false"
        android:focusable="true"
        android:layout_below="@+id/textView"
        android:textColorHighlight="@android:color/holo_blue_bright"
        android:textColorHint="@android:color/holo_blue_bright"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="110dp"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id = "@+id/del"
        android:background="@drawable/delbutton"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="270dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/one"
                android:background="@drawable/btn_1"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/two"
                android:background="@drawable/btn_2"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/three"
                android:background="@drawable/btn_3" />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/four"
                android:background="@drawable/btn_4" />

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/five"
                android:background="@drawable/btn_5" />

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/six"
                android:background="@drawable/btn_6" />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/seven"
                android:background="@drawable/btn_7" />

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/eight"
                android:background="@drawable/btn_8" />

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/nine"
                android:background="@drawable/btn_9" />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/zerozero"
                android:background="@drawable/btn_00" />

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/zero"
                android:background="@drawable/btn_0" />

            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:id = "@+id/ac"
                android:layout_weight="2"
                android:text="ac"
                android:textSize="25dp"
                android:textColor="@android:color/holo_blue_light"
                android:background="@drawable/button_money_border" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/scancodepage"
        android:layout_gravity="center">

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id = "@+id/pay"
            android:text="pay"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50dp"
            android:background="@drawable/btn_start"/>

    </FrameLayout>
</FrameLayout>
